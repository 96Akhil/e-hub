

<div class="container mb-5" style="padding-top: 2rem; ">
   
    <div class="col-md-offset-1 col-md-15 mt-4" >
        <div class="panel" style="background: linear-gradient(to left, #097909, #2c3e50);">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-sm-3 col-xs-12">
                        <h4 class="title">User's <span>List</span></h4>
                    </div>
                    <div class="col-sm-9 col-xs-12 text-right">
                        <div class="btn_group">
                            <input type="text" class="form-control" placeholder="">
                            <button class="btn btn-default" title="Reload">Search</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>E-mail</th>
                            <th>Mobile</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td> {{this.name}} </td>
                            <td> {{this.email}} </td>
                            <td> {{this.mobile}} </td>
                            <td>
                                <ul class="action-list">
                                    <li><a href="/admin/editUser/{{this._id}}" data-tip="edit"><i class="fa fa-edit"></i></a></li>
                                    <li><a href="#" data-tip="block"><i class="fa fa-ban"></i></a></li>
                                </ul>
                            </td>
                        </tr>
                        {{/each}}
                       
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    
                   
                </div>
            </div>
        </div>
    </div>
</div>